 } 
  
 .loginBtn { 
  width: 90%; 
  margin-top: 40px; 
  border-radius:10px;
 }

 .yanzhengma {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.security-code {
  width: 130px;
  height: 35px;
  border: solid 1px #999999;
  border-radius: 5px;
}
.right {
  background-color: lightseagreen;
  width: 60px;
  text-align: center;
  color: white;
}
.yanzhengma .left {
  font-family: Arial;
  font-style: italic;
  font-weight: bold;
  border: 0;
  letter-spacing: 3px;
  font-size: 18px;
  background-color: #ccc;
  padding: 10rpx;
  margin-right: 20rpx;
  color: blue;
}