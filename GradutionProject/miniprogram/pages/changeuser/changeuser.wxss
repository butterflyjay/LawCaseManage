/* pages/changeuser/changeuser.wxss */
.infor {
  width: 100%;
  height: 180px;
  background: white;
  padding-top: 15px;
  position: relative;
}
.center {
  width: 95%;
  height: 100px;
  background: white;
  display: flex;
  flex-direction: column;
  margin: 0 auto;
  border-radius: 5px;
}
.center_top {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 80%;
  height: 80px;
  margin: 0 auto;
  margin-top: 20rpx;
  border-bottom: 1px solid white;
}
.center_img {
  width: 66px;
  height: 66px;
  border-radius: 50%;
  overflow: hidden;
  border: solid 0.5px gray;
}
.center_img .user_head {
  width: 100%;
  height: 100%;
}
.click {
  display: flex;
  flex-direction: row;
}
.btn {
  width: fit-content;
  margin-left: auto;
}
.center_main {
  width: 100%;
  height: fit-content;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
}
.addinfor {
  margin-top: 5px;
  margin-bottom: 5px;
  width: 90%;
  color: gray;
  display: flex;
  flex-direction: row;
}
.add {
  width: 80%;
  border: solid 1px gray;
  border-radius: 5px;
  text-align: center;
}
.tell {
  margin-top: 20px;
  font-size: 12px;
  float: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

