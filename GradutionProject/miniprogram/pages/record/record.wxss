.swiper-tab{
	width: 100%;
	border-bottom: 2rpx solid #23EBB9;
	text-align: center;
	line-height: 80rpx;}
.swiper-tab-list{  font-size: 30rpx;
  display: inline-block;
	width: 50%;
	color: #777777;
}
.on{ color:#23EBB9;
	border-bottom: 5rpx solid #23EBB9;}
 
.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; }

.icon {
	margin-left: 10px;
	width: 30px;
	height: 30px;
}
.li {
	border-bottom: solid 0.1px rgb(236, 234, 234);
	display: flex;
	flex-direction: row;
	align-items: center;
	height: 40px;
}
.infor {
	font-size: 13px;
	color: grey;
}
.li-infor {
	width: 250px;
	margin-left: auto;
	margin-right: 20px;
	text-align: center;
	font-size: 13px;
}
.write {
	margin-left: 20px;
}
.punish {
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}
.more {
	margin-top: 10px;
	height: 60px;
	width: 90%;
	border: solid 0.1px rgb(236, 232, 232);
	border-radius: 10px;
	font-size: 12px;
}
.btn {
	margin-top: 10px;
	height: 30px;
	font-size: 12px;
	width: 150px;
}
.center {
  width: 95%;
  height: 100px;
  display: flex;
  flex-direction: column;
  margin: 0 auto;
  border-radius: 5px;
}
.center_top {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 80%;
  height: 80px;
  margin: 0 auto;
  margin-top: 20rpx;
  border-bottom: 1px solid white;
}
.center_img {
  width: 66px;
  height: 66px;
  border-radius: 50%;
  overflow: hidden;
  border: solid 0.5px gray;
}
.center_img .user_head {
  width: 100%;
  height: 100%;
}
.list1 {
  display: flex;
  flex-direction: row;
  border-radius: 10px;
  align-items: center;
  margin: 10px;
  background-color: #23EBB9;
}
.right1 {
  font-size: 12px;
  background-color: red;
  color: white;
  width: fit-content;
  height: fit-content;
  border: solid 1px;
  margin-left: auto;
  margin-right: 20px;
}
.del_infor {
  display: flex;
  font-size: 13px;
  flex-direction: column;
  justify-content: center;
  height: 100px;
  width: 200px;
  margin-left: 10px;
  color: white;
}
.all-info {
 margin-left: auto;    /*使用flex布局的元素 不能使用float*/
 height: fit-content;
 font-size: 11px;
 color: #5599FF;
 margin-bottom: 50px;
 margin-right: 10px;
}