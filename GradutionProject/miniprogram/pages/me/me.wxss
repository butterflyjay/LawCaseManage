/* pages/me/me.wxss */
Page {
  font-size: 14px;
}
.top {
  width: 100%;
  height: 180px;
  background: #23EBB9;
  padding-top: 15px;
  position: relative;
}
.center {
  width: 95%;
  height: 100px;
  background: white;
  display: flex;
  flex-direction: column;
  margin: 0 auto;
  border-radius: 5px;
}
.center_top {
  display: flex;
  flex-direction: row;
  width: 80%;
  height: 80px;
  margin: 0 auto;
  margin-top: 20rpx;
  border-bottom: 1px solid white;
}
.center_img {
  width: 66px;
  height: 66px;
  border-radius: 50%;
  overflow: hidden;
}
.center_img .user_head {
  width: 100%;
  height: 100%;
}

.center_info {
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
  margin-left: 30px;
}

.center_name {
  font-size: 20px;
}

.center_phone,.center_username {
  color: #BEBEBE;
  margin-top: 10px;
}
.gif-wave {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}
.main {
  display: flex;
  margin-left: 30px;
  margin-right: 50px;
  border-bottom: 1px solid rgb(224, 205, 205);
}
.main_info {
  display:flex;     /* 弹性布局 */
  align-items: center;
  height: 50px;
}
text {
  display: flex;
  align-items: center;
  margin-left: 200px;
  color: #97c0b6;
}
.quit {
  height: 50px;
  width: 100px;
  margin-top: 30px;
  margin-left: auto;
  margin-right: 30px;
  background-color: #23EBB9;
  border-radius: 20px;
}